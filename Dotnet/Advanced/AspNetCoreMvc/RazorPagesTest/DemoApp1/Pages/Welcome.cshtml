@page "/Greet/{person=Visitor}"
@inject DemoApp.Services.IVisitCounter counter
@{
    string name = (string)RouteData.Values["person"];
    int count = counter.NextCount(name);
}

<html>
    <head>
        <title>GreeterApp</title>
    </head>

    <body>
        @if((count%2) == 0)
        {
            <h1 style="background-color: black; color:white">Hello @name</h1>
        }
        else
        {
            <h1>Welcome @name</h1>
        }
        <b>Number of Greetings: </b>@count
    </body>
</html>